{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",

    "outDir": "./build",
    "rootDir": "./src",

    "allowJs": true,           // ✅ Required to import .js tools
    "checkJs": false,          // ✅ Prevent TS from complaining about JS
    "resolveJsonModule": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
